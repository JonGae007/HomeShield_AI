    .modal-buttons .btn-faces {
        width: 100%;
        max-width: none;
    }
}

@media (max-width: 480px) {
    .faces-container {
        padding: 12px;
    }
    
    .faces-card {
        padding: 20px;
        margin: 12px 0;
    }
    
    .face-form {
        gap: 12px;
    }
    
    .btn-faces {
        padding: 14px 24px;
        font-size: 14px;
        min-width: 150px;
    }
    
    .faces-grid {
        grid-template-columns: 1fr;
        gap: 12px;
    }
    
    .face-image-container {
        width: 80px;
        height: 80px;
    }
}
