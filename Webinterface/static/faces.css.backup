}

.delete-icon {
    font-size: 14px;
}

/* Faces Grid */
.faces-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 24px;
    width: 100%;
}

.face-item {
    background: #2C353F;
    border-radius: 12px;
    padding: 20px;
    text-align: center;
    border: 1px solid #3A424E;
    transition: transform 0.2s, box-shadow 0.2s;
}

.face-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(0,0,0,0.3);
}

.face-image-container {
    width: 120px;
    height: 120px;
    margin: 0 auto 16px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid #3A424E;
    transition: border-color 0.2s;
}

.face-item:hover .face-image-container {
    border-color: #73D482;
}

.face-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.face-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
}

.face-name {
    color: #fff;
    margin: 0;
    font-size: 18px;
    font-weight: 600;
}

.no-faces {
    grid-column: 1 / -1;
    text-align: center;
    padding: 60px 20px;
    color: #8B95A1;
}

.no-faces-icon {
    width: 64px;
    height: 64px;
    opacity: 0.5;
    margin-bottom: 16px;
    filter: brightness(0) invert(1);
}

.no-faces h3 {
    color: #fff;
    margin: 16px 0 8px;
    font-size: 24px;
}

.no-faces p {
    font-size: 16px;
    line-height: 1.5;
    max-width: 400px;
    margin: 0 auto;
}

/* Tab Navigation */
.tab-navigation {
    display: flex;
    gap: 8px;
    margin-bottom: 24px;
    border-bottom: 1px solid #3A424E;
}

.tab-button {
    background: transparent;
    border: none;
    color: #8B95A1;
    padding: 12px 24px;
    cursor: pointer;
    font-size: 16px;
    font-weight: 500;
    border-bottom: 2px solid transparent;
    transition: all 0.2s;
}

.tab-button.active {
    color: #73D482;
    border-bottom-color: #73D482;
}

.tab-button:hover {
    color: #fff;
}

.tab-content {
    display: none;
}

.tab-content.active {
    display: block;
}

/* Camera Preview */
.camera-preview, .recognition-preview {
    background: #2C353F;
    border: 1px solid #3A424E;
    border-radius: 8px;
    padding: 16px;
    text-align: center;
    margin-bottom: 16px;
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.camera-preview img, .recognition-preview img {
    max-width: 100%;
    max-height: 300px;
    border-radius: 8px;
}

.camera-placeholder {
    color: #8B95A1;
    text-align: center;
}

.camera-placeholder img {
    width: 48px;
    height: 48px;
    opacity: 0.5;
    margin-bottom: 12px;
    filter: brightness(0) invert(1);
}

.camera-placeholder p {
    margin: 0;
    font-size: 14px;
}

.camera-controls, .recognition-controls {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
}

.camera-controls .btn-faces, .recognition-controls .btn-faces {
    flex: 1;
    min-width: 200px;
}

/* Recognition Form */
.recognition-form {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.recognition-result {
    background: #2C353F;
    border: 1px solid #3A424E;
    border-radius: 8px;
    padding: 20px;
    margin-top: 16px;
}

.recognition-result.success {
    border-color: #73D482;
    background: rgba(115, 212, 130, 0.1);
}

.recognition-result.fail {
    border-color: #E53E3E;
    background: rgba(229, 62, 62, 0.1);
}

.recognition-success h3 {
    color: #73D482;
    margin: 0 0 12px 0;
    font-size: 18px;
}

.recognition-fail h3 {
    color: #E53E3E;
    margin: 0 0 12px 0;
    font-size: 18px;
}

.recognition-success p, .recognition-fail p {
    color: #fff;
    margin: 8px 0;
    font-size: 14px;
}

.recognition-success strong, .recognition-fail strong {
    color: #8B95A1;
}

